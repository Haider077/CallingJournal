# Application Configuration
APP_NAME=CallingJournal
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=calling_journal
DB_USER=postgres
DB_PASSWORD=your-database-password

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# LLM Configuration
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=journal-embeddings

# Phone Service Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Transcription Configuration
# Local Whisper model (options: tiny, base, small, medium, large)
WHISPER_MODEL=base

# Deepgram (for real-time streaming transcription)
DEEPGRAM_API_KEY=your-deepgram-api-key
DEEPGRAM_MODEL=nova-3
DEEPGRAM_LANGUAGE=en
DEEPGRAM_ENCODING=mulaw
DEEPGRAM_SAMPLE_RATE=8000
DEEPGRAM_CHANNELS=1
DEEPGRAM_ENDPOINTING=500

# Redis Configuration (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# File Storage Paths
AUDIO_STORAGE_PATH=./data/audio
LOG_STORAGE_PATH=./data/logs
JOURNAL_STORAGE_PATH=./data/journals

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# CORS Configuration (JSON array of allowed origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]